<!doctype html>
<html lang="en">

<head>
    <% include partials/head.ejs %>
</head>

<body>
    <div class="container-fluid m-0 p-0" id="loginForm" >
        <div class="row m-0 p-0">
            <div class="col-sm-5 m-0 p-0" style="height:100vh;">
                    <video id="myVideo" muted loop autoplay>
                        <source src="media/loginPage.mp4" type="video/mp4">
                    </video>
                    <div id="loginOverlay"></div>
            </div>
            <div class="col-sm-7 m-0 p-0" style="height:100vh; background-color: #FEFEFE">
                <div class="row d-flex justify-content-center text-center" >
                    <div class="col-3"></div>
                    <div class="col-6">      
                        <div class="imgcontainer">
                            <img src="#" alt="Trender" class="logo">
                            <h6>What comes to your mind ...</h6>
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>
                <form class="modal-content animate" action="/login" method="POST" id="modalLogin">
                    <div class="mcontainer">
                        <div class="row"><h4 style="font-weight: bold;">Sign In</h4></div>
                        <div class="row">
                            <label for="username"><b>Username</b></label>
                            <input class="form-control mr-sm-2" type="text" oninvalid="this.setCustomValidity('Please enter a valid username.')" placeholder="Enter Username" name="username" required>
                        </div>
                        <div class="row">
                            <label for="password"><b>Password</b></label>
                            <input class="form-control mr-sm-2" type="password" oninvalid="this.setCustomValidity('Please enter a valid password.')" placeholder="Enter Password" name="password" required>
                            <label>
                                <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>
                        </div>
                        <div class="row">
                            <button class="btn btn-primary" type="submit">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include partials/cdn.ejs %>
    <% include partials/functions.ejs %>
</body>

</html>