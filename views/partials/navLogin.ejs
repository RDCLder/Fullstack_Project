<div id="loginModal" class="modal">

    <form class="modal-content animate" action="">
        <div class="imgcontainer">
            <span onclick="document.getElementById('loginModal').style.display='none'" class="close" title="Close Modal">&times;</span>
            <img src="#" alt="" class="avatar">
        </div>
    
        <div class="mcontainer">
            <div class="row"><h6>Sign In</h6></div>
            <div class="row">
                <label for="uname"><b>Username</b></label>
                <input class="form-control mr-sm-2" type="text" oninvalid="this.setCustomValidity('Please enter a valid Username')" placeholder="Enter Username" name="uname" required>
            </div>
            <div class="row">
                <label for="psw"><b>Password</b></label>
                <input class="form-control mr-sm-2" type="password" oninvalid="this.setCustomValidity('Please enter a valid Password')" placeholder="Enter Password" name="psw" required>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>
            <div class="row">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </div>
    
        <div class="mcontainer" style="background-color:#f1f1f1; margin-top:2%">
            <div class="row">               
                <div class="col"><button type="button" onclick="document.getElementById('loginModal').style.display='none'" class="cancelbtn">Cancel</button></div>
                <div close="col"><span class="forgotusr"><a href="#">Forgot Username?</a></span></div>
                <div class="col"><span class="forgotpsw"><a href="#">Forgot Password?</a></span></div>                    
            </div>
    </form>
</div>
</div>