<div class="card commentCard">
    <div class="row m-0 p-0">
        <!-- Card Content -->
        <div class="col-11 m-0 p-0">
            <div class="m-0 pl-2 commentHeader">
                <div class="card-text">
                    <%= comment.user.dataValues.username %>
                </div>
            </div>
            <div class="card-body commentText show" aria-expanded="true" id="titleID">
                <h6 class="card-text">
                    <%= comment.body %>
                </h6>
            </div>
            <div class="card-body commentOptions show" aria-expanded="true" id="titleID">
                <div class="smallText mr-2"><a href="#">Reply</a></div>
                <div class="smallText mr-2"><a href="#">Share</a></div>
                <div class="smallText mr-2"><a href="#">Save</a></div>
                <div class="smallText mr-2"><a href="#">Report</a></div>
