<div class="card topicPostCard">
    <div class="row m-0 p-0">
        <!-- Card Content -->
        <div class="col-11 m-0 p-0">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title m-0 p-0"><%= topic.title %></h5>
                    </div>
                    <div class="col-1">
                        <button class="collapsible btn m-0 p-0" data-toggle="collapse" href="#topicBody"
                            style="background-color:transparent; border:none">
                            <span class="oi oi-chevron-bottom" style="color:white"></span>
                        </button>
                    </div>
                </div>
                <div class="row show" aria-expanded="true" id="topicBody">
                    <div class="col">
                        <div class="card-text text-left">Posted by <a
                                href="/user/<%= topic.user.dataValues.username %>">
                                <%= topic.user.dataValues.username %></a>
                        </div>
                        <div class="card-text pl-2 pr-2">&#9679</div>
                        <div class="card-text"><%= topicTime %></div>
                    </div>
                    <div class="col-5 d-flex justify-content-end pr-3">
                    </div>
                </div>
            </div>
            <div class="card-body topicBody show" aria-expanded="true" id="topicBody">
                <!-- <h6 class="card-text"> -->
                <pre><%= topic.body %></pre>
                <!-- </h6> -->
            </div>
            <div class="card-body commentBody show" aria-expanded="true" id="topicBody">
                <a href="#" class="btn btn-primary ml-3" data-toggle="collapse"
                    data-target=".submitCommentCard1">Comment</a>
                <a href="#" class="btn btn-primary">Share</a>
                <a href="#" class="btn btn-primary">Save</a>
                <a href="#" class="btn btn-primary">Report</a>
            </div>
        </div>
        <!-- End of Card Content -->
        <!-- Upvote/Downvote Sidebar -->
        <div class="col-1 card-side show" aria-expanded="true" id="topicBody">
            <% if (isLoggedIn == true) { %>
            <div class="voteDiv pt-1">
                <div class="upvote" id=""></div>
            </div>
            <% } else { %>
                <div class="voteDiv pt-1">
                </div>
            <% } %>
            <div class="voteDiv">
                <div class="count" id="">1</div>
            </div>
            <% if (isLoggedIn == true) { %>
            <div class="voteDiv">
                <div class="downvote" id=""></div>
            </div>
            <% } else { %>
                <div class="voteDiv pt-1">
                </div>
            <% } %>
        </div>
        <!-- End of Upvote/Downvote Sidebar -->
    </div>
</div>