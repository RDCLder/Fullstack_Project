<% if (topic.type == "text" || topic.type == "link") { %>
<div class="card topicTextPreview">
<% } else if (topic.type == "media" || topic.type == "link") { %>
<div class="card topicMediaPreview">
<% } %>
    <div class="row m-0 p-0">
        <!-- Card Content -->
        <div class="col-11 m-0 p-0">
            <div class="card-header">
                <div class="row">
                    <div class="col-9 m-0 p-0">
                        <a href="#">
                            <h5 class="card-title m-0 p-0">
                                <% if (pageType == "index") { %>
                                <a href="/community/<%= topic.community.dataValues.name %>/<%= topic.id %>">
                                    <% } else if (pageType == "community") { %>
                                    <a href="/community/<%= community.name %>/<%= topic.id %>">
                                        <% } %>
                                        <%= topic.title %>
                                    </a>
                            </h5>
                        </a>
                    </div>
                    <div class="col-3">
                        <button class="collapsible btn m-0 p-0 float-right" data-toggle="collapse" href="#topic<%= topic.id %>"
                            style="background-color:transparent; border:none" id="collapseTopicText">
                            <span class="oi oi-chevron-bottom" style="color:white"></span>
                        </button>
                    </div>
                </div>
                <div class="row show" aria-expanded="true" id="topic<%= topic.id %>">
                    <div class="col">
                        <div class="card-text">Posted by
                            <a
                                href="/user/<%= topic.user.dataValues.username %>"><%= topic.user.dataValues.username %></a>
                        </div>
                        <div class="card-text pl-2 pr-2">&#9679</div>
                        <div class="card-text"><%= topicTime %></div>
                    </div>
                    <div class="col-5 d-flex justify-content-end">
                        <% if (pageType == "index") { %>
                        <a href="/community/<%= topic.community.dataValues.name %>">
                            <div class="card-text"><%= topic.community.dataValues.name.toUpperCase() %></div>
                        </a>
                        <% } else { %>
                        <a href="/community/<%= pageTitle %>">
                            <div class="card-text"><%= pageTitle.toUpperCase() %></div>
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
            <% if (topic.type == "text") { %>
            <div class="card-body textBody height-auto show" aria-expanded="true" id="topic<%= topic.id %>">
                <pre><%= topic.body %></pre>
            </div>
            <% } else if (topic.type == "media") { %>
            <div class="card-body topicBody height-auto show" aria-expanded="true" id="topic<%= topic.id %>">
                <pre><img class="mediaPreview" src="<%= topic.body %>" alt="<%= topic.body %>"></pre>
            </div>
            <% } else if (topic.type == "link") { %>
                <!-- For Future Use -->
            <% } %>
            <div class="card-body commentBody height-auto show" aria-expanded="true" id="topic<%= topic.id %>">
                <% if (pageType == "index") { %>
                <a href="/community/<%= topic.community.dataValues.name %>/<%= topic.id %>"
                    class="btn btn-primary ml-3">Comment</a>
                <% } else if (pageType == "community") { %>
                <a href="/community/<%= community.name %>/<%= topic.id %>" class="btn btn-primary ml-3">Comment</a>
                <% } %>
                <a href="#" class="btn btn-primary">Share</a>
                <a href="#" class="btn btn-primary">Save</a>
                <a href="#" class="btn btn-primary">Report</a>
                <% if (topic.type == "media" || topic.type == "link") { %>
                <a href="<%= topic.body %>" target="_blank" class="btn btn-primary float-right">Source</a>
                <% } %>
            </div>
        </div>
        <!-- End of Card Content -->
        <!-- Upvote/Downvote Sidebar -->
        <div class="col-1 card-side show" aria-expanded="true" id="topic<%= topic.id %>">
            <% if (isLoggedIn == true) { %>
            <div class="voteDiv pt-1">
                <div class="upvote" id=""></div>
            </div>
            <% } else { %>
            <div class="voteDiv pt-1">
            </div>
            <% } %>
            <div class="voteDiv">
                <div class="count" id="">1</div>
            </div>
            <% if (isLoggedIn == true) { %>
            <div class="voteDiv">
                <div class="downvote" id=""></div>
            </div>
            <% } else { %>
            <div class="voteDiv pt-1">
            </div>
            <% } %>
        </div>
        <!-- End of Upvote/Downvote Sidebar -->
    </div>
</div>